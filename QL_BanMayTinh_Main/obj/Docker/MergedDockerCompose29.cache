networks:
  default:
    external:
      name: nat
services:
  donhang.api:
    build:
      context: D:\Documents\4th Year\1st Semester\Open-sourced Apps\Project\QL_BanMayTinh\QL_BanMayTinh_Main
      dockerfile: Services/DonHang.API/DonHang.API/Dockerfile
    depends_on:
