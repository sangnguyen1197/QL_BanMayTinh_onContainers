    <!-- Indicators-->
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item item1 active">
            <div class="container">
                <div class="w3l-space-banner">
                    <div class="carousel-caption p-lg-5 p-sm-4 p-3">
                        <p>
                            Giảm trực tiếp
                            <span>10%</span>
                        </p>
                        <h3 class="font-weight-bold pt-2 pb-lg-5 pb-4">
                            <span>Đại</span>
                            hạ giá
                        </h3>
                        <a class="button2" href="#">Hốt Ngay </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item item2">
            <div class="container">
                <div class="w3l-space-banner">
                    <div class="carousel-caption p-lg-5 p-sm-4 p-3">
                        <p>
                            Tai nghe
                            <span>Hàng độc</span>
                        </p>
                        <h3 class="font-weight-bold pt-2 pb-lg-5 pb-4">
                            Tai nghe
                            <span>Xịn</span>
                        </h3>
                        <a class="button2" href="#">Hốt Ngay </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item item3">
            <div class="container">
                <div class="w3l-space-banner">
                    <div class="carousel-caption p-lg-5 p-sm-4 p-3">
                        <p>
                            Giảm trực tiếp
                            <span>10%</span>
                        </p>
                        <h3 class="font-weight-bold pt-2 pb-lg-5 pb-4">
                            <span>Hàng</span> mới
                        </h3>
                        <a class="button2" href="#">Hốt Ngay </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item item4">
            <div class="container">
                <div class="w3l-space-banner">
                    <div class="carousel-caption p-lg-5 p-sm-4 p-3">
                        <p>
                            Lấy ngay mã giảm giá
                            <span>40%</span>
                        </p>
                        <h3 class="font-weight-bold pt-2 pb-lg-5 pb-4">
                            <span>Trong hôm nay</span>
                        </h3>
                        <a class="button2" href="#">Hốt Ngay </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- //banner -->
<!-- top Products -->
<div class="ads-grid py-sm-5 py-4">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            <span>S</span>ản
            <span>P</span>hẩm
        </h3>
        <!-- //tittle heading -->
        <div class="row">
            <!-- product left -->
            <div class="agileinfo-ads-display col-lg-9">
                <div class="wrapper">
                    <!-- first section -->
                    @foreach (var thuonghieu in Model.ViewThuongHieu)
                    {
                        var brand = @thuonghieu.MaThuongHieu;
                        <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                            <h3 class="heading-tittle text-center font-italic">@thuonghieu.TenThuongHieu</h3>
                            <div class="row">
                                @foreach (var sanpham in Model.ViewSanPham)
                                {
                                    var quantity = (int)1;
                                    var url = "Product/Details/" + sanpham.MaSp;
                                    var urlcart = "Cart/AddItem?masp=" + sanpham.MaSp + "&soluong=" + quantity;
                                    var productbrand = sanpham.MaThuongHieu;
                                    if (productbrand == brand)
                                    {
                                        <div class="col-md-4 product-men mt-5">
                                            <div class="men-pro-item simpleCart_shelfItem">
                                                <div class="men-thumb-item text-center">
                                                    <img src="@sanpham.Hinhanhindex" alt="">
                                                    <div class="men-cart-pro">
                                                        <div class="inner-men-cart-pro">
                                                            <a href="@Url.Action("Details", "Product",new { id = sanpham.MaSp })" class="link-product-add-cart">Chi tiết</a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="item-info-product text-center border-top mt-4">
                                                    <h4 class="pt-1">
                                                        <a href="@Url.Action("Details", "Product",new { id = sanpham.MaSp })">@sanpham.TenSp</a>
                                                    </h4>
                                                    <div class="info-product-price my-2">
                                                        <span class="item_price">@sanpham.GiaBanLe.ToString("#,##0") VNĐ</span>
                                                    </div>
                                                    <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                                        <form method="post">
                                                            <fieldset>
                                                                <input type="button" onclick="them('@sanpham.MaSp')" value="Thêm vào giỏ" class="button btn" />
                                                            </fieldset>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    }
                    <!-- //first section -->
                    <!-- third section -->
                    <div class="product-sec1 product-sec2 px-sm-5 px-3">
                        <div class="row">
                            <h3 class="col-md-4 effect-bg">Hội hè</h3>
                            <p class="w3l-nut-middle">Giảm thêm 10%</p>
                            <div class="col-md-8 bg-right-nut">
                                <img src="images/image1.png" alt="">
                            </div>
                        </div>
                    </div>
                    <!-- //third section -->

                </div>
            </div>
            <!-- //product left -->
            <!-- product right -->
            <div class="col-lg-3 mt-lg-0 mt-4 p-lg-0">
                <div class="side-bar p-sm-4 p-3">
                    <div class="search-hotel border-bottom py-2">
                        <h3 class="agileits-sear-head mb-3">Tìm..</h3>
                        <form action="@Url.Action("Search", "Product")" method="get">
                            <input type="search" placeholder="Tên sản phẩm..." name="keyword" required="">
                            <input type="submit" value=" ">
                        </form>
                    </div>

                    
                    <form action="#" method="post">
                        <!-- price -->
                        <div class="left-side border-bottom py-2">
                            <h3 class="agileits-sear-head mb-3">Giá tiền</h3>
                            <ul>
                                @foreach (var price in Model.myfilter.PriceList)
                                {
                                    <li>
                                        <input type="checkbox" class="checked" name="gia" id="@price.PriceID" checked="@price.IsChecked" value="@price.PriceValue" onclick="this.form.submit();" />
                                        <span class="span">@price.PriceName</span>
                                    </li>
                                }
                            </ul>
                        </div>
                        <!-- //price -->
                        <!-- electronics -->
                        <div class="left-side border-bottom py-2">
                            <h3 class="agileits-sear-head mb-3">Thương hiệu</h3>
                            <ul>
                                @foreach (var category in Model.myfilter.CategoryList)
                                {
                                    <li>
                                        <input type="checkbox" class="checked" name="loai" id="@category.CategoryID" checked="@category.IsChecked" value="@category.CategoryValue" onclick="this.form.submit();" />
                                        <span class="span">@category.CategoryName</span>
                                    </li>
                                }
                            </ul>
                        </div>
                        <!-- //electronics -->
                    </form>
                    
                </div>
                <!-- //product right -->
            </div>
        </div>
    </div>
</div>
<!-- //top products -->