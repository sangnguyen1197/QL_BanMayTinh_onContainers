@model QL_BanMayTinh_Main.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/js/controller/Themgiohang.js"></script>
}

<!-- banner -->
