@model QL_BanMayTinh_Main.EF.Chitietphieunhap

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<<h2>Xem</h2>

<div>
    <h4>Chi tiết phiếu nhập</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaSpNavigation.MaSp)
        </dd>
        <br />

        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaSpNavigation.TenSp)
        </dd>
        <br />

        <dt>
            Số lượng tồn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaSpNavigation.SoLuongTon)
        </dd>
        <br />

        <dt>
            Giá bán lẻ sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaSpNavigation.GiaBanLe)
        </dd>
        <br />

        <dt>
            Số lượng nhập SP
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuongNhap)
        </dd>
        <br />

        <dt>
            Thành tiền
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ThanhTien)
        </dd>
        <br />


    </dl>
</div>
<p>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("Edit",  new { mapn = Model.MaPn, masp=Model.MaSp })';return false;"><b> Sửa</b></button>&nbsp&nbsp&nbsp&nbsp
    <button class="btn btn-default" onclick="location.href='@Url.Action("Index", new { id = Model.MaPn })';return false;"><b>Trở lại</b></button>&nbsp&nbsp&nbsp&nbsp
</p>
